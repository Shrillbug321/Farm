@model Farm.Models.Field

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Field</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FieldId" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsWatered" /> @Html.DisplayNameFor(model => model.IsWatered)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsFertilize" /> @Html.DisplayNameFor(model => model.IsFertilize)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="TimeToCollect" class="control-label"></label>
                <input asp-for="TimeToCollect" class="form-control" />
                <span asp-validation-for="TimeToCollect" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
